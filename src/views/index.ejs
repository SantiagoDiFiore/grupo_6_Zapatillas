<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head")%>

<body>
    <%- include("./partials/header")%>

    <section class="banner">
        <img src="/images/banner-nike.jpg" alt="Banner de ofertas">
        <img src="/images/banner-adidas-classic.jpg" alt="Banner de ofertas" class="none">
    </section>
    <div class="dots">
        <i class="fas fa-ellipsis-h center-dot"></i>
    </div>

    <main>
        <div class="title">
            <h2 class="linea"><span>DESTACADOS</span></h2>
        </div>
        <section class="destacados">
            <% for( let i = 0; i < products.length; i++ ) { %>

            <%if (products[i].category =="destacados") { 
                let finalPrice = products[i].discount ? (products[i].price - products[i].price * products[i].discount / 100 ).toFixed(0)  : products[i].price; %>
            %>
            <article class="recomendado-article a1">
                <a href="/products/<%= products[i].id %> "><img src="/images/products/<%= products[i].image %>"
                        alt=<%= products[i].name %>></a>
                <div class="contenedor-descripcion">
                    <div><%= products[i].name %></div>
                    <% if (products[i].discount) { %>
                    <span class="small">$<%= toThousand(products[i].price) %></span> $<%= toThousand(finalPrice)  %>
                    <p class="descuento"><%- products[i].discount ? `<span>${products[i].discount}% OFF</span>` : '' %>
                    </p>
                    <% } else { %>
                    <div class="precio-carrito">$ <%= toThousand(products[i].price) %></div>
                    <% } %>
                </div>
            </article>

            <% } %>

            <% } %>
        </section>

        <div class="title">
            <h2 class="linea"><span>OFERTAS</span></h2>
        </div>
        <section class="destacados">
            <% for( let i = 0; i < products.length; i++ ) { %>

            <%if (products[i].category =="in-sale") { 
                let finalPrice = products[i].discount ? (products[i].price - products[i].price * products[i].discount / 100 ).toFixed(0)  : products[i].price; %>
            %>
            <article class="recomendado-article a1">
                <a href="/products/<%= products[i].id %> "><img src="/images/products/<%= products[i].image %>"
                        alt=<%= products[i].name %>></a>

                    <% if (products[i].discount) { %>
                    <span class="discountTag">
                    <i class="fas fa-tags"></i>
                    </span>
                   <% } %>

                <div class="contenedor-descripcion">
                    <div><%= products[i].name %></div>
                    <% if (products[i].discount) { %>
                    <span class="small">$<%= toThousand(products[i].price) %></span> $<%= toThousand(finalPrice)  %>
                    <p class="descuento"><%- products[i].discount ? `<span>${products[i].discount}% OFF</span>` : '' %>
                    </p>
                    
                    <% } else { %>
                    <div class="precio-carrito">$ <%= toThousand(products[i].price) %></div>
                    <% } %>
                </div>
            </article>

            <% } %>

            <% } %>
        </section>

        <section class="marcas">
            <div class="title">
                <h2 class="linea"><span>COMPRÁ POR MARCA</span></h2>
            </div>
            <div class="images padding">
                <i class="fas fa-chevron-left previous icons-marca"></i>
                <img src="images/marca-nike.png" alt="Nike" class="marca_img">
                <img src="images/marca-adidas.png" alt="Adidas" class="marca_img">
                <img src="images/marca-puma.png" alt="Puma" class="marca_img">
                <img src="images/marca-converse.png" alt="Converse" class="marca_img none1">
                <img src="images/marca-vans.png" alt="Vans" class="marca_img none2">
                <img src="images/marca-newbalance.png" alt="Newbalance" class="marca_img none2">
                <i class="fas fa-chevron-right next icons-marca"></i>
            </div>

        </section>


        <div class="medios-pago">
            <div class="titulo-medios">MEDIOS DE PAGO</div>
            <img src="images/medios-pago-varios.png" alt="pagoelectronico" class="imagen-pago">
            <img src="images/medios-pago-efectivo.jpg" alt="pagoefectivo" class="imagen-pago2">
        </div>


        <div class="envios padding">
            <i class="fas fa-shipping-fast"></i>¡ENVIOS SIN CARGO A TODO EL PAIS!
        </div>

        <div class="newsletter">

            <form action="/" method="POST" class="newsletter">

                <h3 class="newsletter-title">SUSCRIBITE AL NEWSLETTER</h3>
                <div class="control-formulario">
                    <input type="email" name="email" id="email" placeholder="Ingresá tu email" class="control">
                    <button type="submit" class="boton-suscribe">SUSCRIBIRME</button>
                </div>
            </form>

        </div>
    </main>

    <%- include("./partials/footer")%>
</body>

</html>